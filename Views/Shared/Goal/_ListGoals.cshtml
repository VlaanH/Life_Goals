@using LifeGoals.PageObjects
@model LifeGoals.PageObjects.ListGoals
@{
    int step = 3;
    
    if (Model.GoalObjectsList != default)
    {
        int startRead = (Model.Scroll.ScrollNumber * step)-step;
        
            
        int stopRead = (Model.Scroll.ScrollNumber*step);
    
        if (stopRead>Model.GoalObjectsList.Count)
            stopRead = Model.GoalObjectsList.Count;

  
            
        for (int i = startRead; i < stopRead; i++)
        {

            @(await Html.PartialAsync("Goal/Goal", new GoalAndStatusObjects { GoalObjects = Model.GoalObjectsList[i], PageStatus = Model.Scroll.PageStatus } ));

        } 
           
    }
}