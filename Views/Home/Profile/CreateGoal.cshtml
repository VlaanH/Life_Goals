<div class="div_create_goal">

    <form method="get" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel" data-ajax-mode='replace' data-ajax-url="@Url.Action("GoalAdd", "Home")">

        <div style="display: flex;">
                        
            <input class="input-radius form-control blue" name="titles" placeholder="Title" autocomplete="off" style="display: initial;width: 100%;margin-bottom: 24px;"/>
            

        
        </div>
                   
                    

        <textarea placeholder="Body description..."  name="body" rows="3" class="textarea_description"></textarea>

        <div style="display: flex">
            
            <input type="checkbox" onchange="dependencyOnCheckbox(this,'donate')"
                   id="isDonate" name="isDonate" class="checkbox" value="true"/>
            <label for="isDonate" class="checkboxText">Is Donate</label>
            
            <div id="donate" hidden="hidden" style="display: flex; width: 100%">
            
                <input class="input-radius form-control blue donate_Value" visibility="hidden" name="donateValue" placeholder="ETH Value" type="text"
                       oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');"
                       value="0.001" maxlength="10"  autocomplete="off">
                
                <svg aria-hidden="true" focusable="false" class="currency_svg" style="margin-top: 5px;">
                    <use xlink:href="#ETH"></use>
                </svg>
                
                <input type="checkbox" onchange="dependencyOnCheckbox(this,'MyAddressInput')"
                       name="isMyAddress" id="IsMyAddress" class="checkbox" value="true"/>
                <label for="IsMyAddress" class="checkboxText">My address</label>
                            
                            
                <input id="MyAddressInput" class="input-radius form-control blue donate_Value" 
                       style="width: 100%;" name="myAddress" placeholder="ETH Address" type="text"
                       autocomplete="off" hidden="hidden">
            </div>
            
            
            
        </div>
        <input type="submit" value="Ğ¡reate goal" class="btn btn-white-purple rounded-root"/>
    </form>
</div>